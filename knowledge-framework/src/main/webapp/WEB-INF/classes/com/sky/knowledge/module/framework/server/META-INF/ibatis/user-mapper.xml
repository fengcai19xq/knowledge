	<insert id="insert"
		parameterType="com.sky.knowledge.module.framework.shared.domain.User">
		<selectKey keyProperty="id" resultType="string" order="BEFORE">
			SELECT USER_SEQ.NEXTVAL AS
			id FROM DUAL
		</selectKey>
		<![CDATA[
			insert into T_AUTH_USER( 
		]]>
		<include refid="insert_param" />
		<![CDATA[
			) values (
				#{id},
		]]>
		<choose>
			<when test="empCode!=null">
				#{empCode.empCode},  		
				</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		<choose>
			<when test="loginName!=null">
				#{loginName},
				</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
				null,
		<choose>
			<when test="password!=null">
				#{password},
				</when>
			<otherwise>
				null,
			</otherwise> 
		</choose>
		<choose>
			<when test="status!=null">
					#{status},
				</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		<choose>
			<when test="invalidDate!=null">
					sysdate,
			</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		<choose>
			<when test="validDate!=null">
					sysdate,
			</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		<choose>
			<when test="createUser!=null">
					#{createUser,jdbcType=VARCHAR},
				</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		sysdate,
		<choose>
			<when test="modifyUser!=null">
					#{modifyUser,jdbcType=VARCHAR},
				</when>
			<otherwise>
				null,
			</otherwise>
		</choose>
		sysdate
		)
	
	</insert>

