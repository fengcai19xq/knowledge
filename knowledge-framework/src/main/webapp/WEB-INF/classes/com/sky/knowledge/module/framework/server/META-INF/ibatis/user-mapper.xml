			<if test="status!=null">
				AND MASTER.STATUS = #{status}
		    </if>
			<if test="invalidDate!=null">
				AND MASTER.INVALIDDATE = #{invalidDate}
		    </if>
			<if test="validDate!=null">
				AND MASTER.validDate = #{validDate}
		    </if>
		</where>
		<![CDATA[
