	</update>

	<update id="update">
		UPDATE T_AUTH_USER
		<set>
			<if test="empCode!=null and empCode.empCode!=null">
				EMPCODE = #{empCode.empCode},
		    </if>
			<if test="loginName!=null and loginName!=''">
				LOGINNAME = #{loginName},
	    	</if>
			<if test="password!=null and password!=''">
				PASSWORD = #{password},
	    	</if>
			<if test="lastLogin!=null">
				LASTLOGIN = #{lastLogin},
	    	</if>
			<if test="status!=null">
				STATUS = #{status},
	    	</if>
	    	<choose>
			<when test="invalidDate!=null">
				INVALIDDATE = sysdate,
			</when>
			<otherwise>
				INVALIDDATE = null,
			</otherwise>
			</choose>
			<choose>
			<when test="validDate!=null">
				VALIDDATE = sysdate,
			</when>
			<otherwise>
				VALIDDATE = null,
			</otherwise>
			</choose>
			<if test="modifyUser != '' and modifyUser != '' ">
				MODIFYUSER = #{modifyUser,jdbcType=VARCHAR},
        	</if>
			MODIFYDATE = sysdate
		</set>
		WHERE ID = #{id}
	</update>

	<delete id="deleteById" parameterType="string">
		<![CDATA[
			UPDATE  T_AUTH_USER SET STATUS=2,validate=sysdate WHERE ID = #{id}
		]]>
	</delete>

